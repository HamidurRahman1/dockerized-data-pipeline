
FROM apache/airflow:slim-2.7.2-python3.9

ENV TZ=America/New_York

RUN pip install apache-airflow-providers-postgres \
    && pip install redis \
    && pip install apache-airflow-providers-celery \
    && pip install --upgrade pip

USER root

ENV JAVA8_VERSION=8
ENV MAVEN_VERSION=3.8.4
ENV SPARK_VERSION=3.2.1
ENV HADOOP_SPARK_VERSION=3.2

ENV GROOVY_HOME=/opt/groovy
ENV JAVA_HOME=/opt/java8
ENV MAVEN_HOME=/opt/maven
ENV SPARK_HOME=/opt/spark

RUN apt-get update \
    && apt-get upgrade -y \
    && apt-get install -y \
        ca-certificates \
        locales \
        curl \
        wget \
        zip \
        unzip \
    && apt-get update

RUN wget -qO - https://adoptopenjdk.jfrog.io/adoptopenjdk/api/gpg/key/public | apt-key add - \
    && echo "deb https://adoptopenjdk.jfrog.io/adoptopenjdk/deb buster main" | tee /etc/apt/sources.list.d/adoptopenjdk.list \
    && apt-get update && apt-get install -y adoptopenjdk-${JAVA8_VERSION}-hotspot \
    && ln -s /usr/lib/jvm/adoptopenjdk-${JAVA8_VERSION}-hotspot-amd64 $JAVA_HOME

# as of this development update java PATH should be set before installing groovy otherwise groovy is going to install java11
ENV PATH $PATH:$JAVA_HOME/bin

RUN apt-get update && apt-get install -y groovy \
    && ln -s /usr/share/groovy $GROOVY_HOME

ENV PATH $PATH:$GROOVY_HOME/bin

RUN wget -q "https://archive.apache.org/dist/spark/spark-${SPARK_VERSION}/spark-${SPARK_VERSION}-bin-hadoop${HADOOP_SPARK_VERSION}.tgz" -O spark.tgz \
    && tar xzf spark.tgz -C /opt \
    && ln -s /opt/spark-${SPARK_VERSION}-bin-hadoop${HADOOP_SPARK_VERSION} $SPARK_HOME \
    && rm spark.tgz

ENV PATH $PATH:$SPARK_HOME/bin

RUN apt-get update \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get autoremove -y

USER airflow

WORKDIR /home/airflow

CMD ["/bin/bash"]


